{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "paths": {
      "@app/*": ["./src/*"],
      "@assets/*": ["./assets/*"]
    },
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
